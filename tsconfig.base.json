{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@customer-web/components/*": ["apps/customer-web/src/components/*", "stories/components/*"],
      "@customer-web/configs/*": ["apps/customer-web/src/configs/*"],
      "@customer-web/constants": ["apps/customer-web/src/constants"],
      "@customer-web/constants/*": ["apps/customer-web/src/constants/*"],
      "@customer-web/enums/*": ["apps/customer-web/src/enums/*"],
      "@customer-web/helpers/*": ["apps/customer-web/src/helpers/*"],
      "@customer-web/hooks": ["apps/customer-web/src/hooks"],
      "@customer-web/hooks/*": ["apps/customer-web/src/hooks/*"],
      "@customer-web/page-providers/*": ["apps/customer-web/src/services/page-providers/*"],
      "@customer-web/redux-hook": ["apps/customer-web/src/redux/app/hook"],
      "@customer-web/redux/*": ["apps/customer-web/src/redux/store/slice/*"],
      "@customer-web/request-providers/*": ["apps/customer-web/src/services/request/providers/*"],
      "@customer-web/services/*": ["apps/customer-web/src/services/*"],
      "@customer-web/state": ["apps/customer-web/src/state"],
      "@customer-web/state/*": ["apps/customer-web/src/state/*"],
      "@customer-web/styles/*": ["apps/customer-web/src/styles/*"],
      "@customer-web/views/*": ["apps/customer-web/src/views/*"],
      "@tsu-org/*": ["libs/sdk/src/*"],
      "@tsu-org/sdk": ["libs/sdk/src"],
      "@tsu-org/sdk/*": ["libs/sdk/src/*"],
      "@tsu-org/ui": ["libs/ui/src"],
      "@tsu-org/ui/*": ["libs/ui/src/*"],
      "@tsu-org/ui-kit": ["libs/ui-kit/src"],
      "@tsu-org/ui-kit/*": ["libs/ui-kit/src/*"]
    },
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "tmp"]
}
